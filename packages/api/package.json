{
  "name": "api",
  "version": "1.0.0",
  "author": "Dmitry Paskhin <d.pasxin@gmail.com>",
  "scripts": {
    "build:prod": "npm run clean:dist && prisma generate && ttsc --project tsconfig.build.json",
    "build:start": "NODE_ENV=production node ./dist/index.js",
    "build:watch": "ts-node ./cmd/build/watch.ts",
    "clean:dist": "rimraf './dist'",
    "clean:all": "npm run clean:dist && rimraf './node_modules' && rimraf './src/gen'",
    "check:lint": "tsc --noEmit && eslint \"{**/*,*}.{ts,js,json}\"",
    "check:lint:fix": "tsc --noEmit && eslint \"{**/*,*}.{ts,js,json}\" --fix",
    "check:test": "exit 0",
    "check:all": "npm run check:lint && npm run check:test"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "ts-node-dev": "^2.0.0"
  },
  "dependencies": {
    "@apollo/gateway": "^2.2.2",
    "@apollo/utils.keyvadapter": "^2.0.1",
    "@keyv/redis": "^2.5.6",
    "@nestjs/apollo": "^10.1.7",
    "@nestjs/common": "^9.2.1",
    "@nestjs/core": "^9.2.1",
    "@nestjs/graphql": "^10.1.7",
    "@nestjs/jwt": "^10.0.3",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^9.2.1",
    "@prisma/client": "^4.8.0",
    "apollo-server-express": "^3.11.1",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.13.2",
    "cli-color": "^2.0.3",
    "config": "^1.0.0",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-redis-subscriptions": "^2.6.0",
    "graphql-subscriptions": "^2.0.0",
    "ioredis": "^5.2.4",
    "keyv": "^4.5.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "pm2": "^5.3.0",
    "prisma": "^4.8.0"
  }
}
